{
    "name": "MrKiller Renamer Bot",
    "description": "Telegram File Renamer Bot ",
    "logo": "https://graph.org/file/97f76ffe8cbb26b4119e5.jpg",
    "keywords": ["Renamer Bot", "Mongo DB"],    
    "repository": "https://github.com/PowerfulUniverse/RenamePro_Bot",
    "env": {
        "API_ID": {
            "description": "Your APP ID From my.telegram.org ",
            "value": ""
        },
        "API_HASH": {
            "description": "Your API Hash From my.telegram.org ",
            "value": ""
        },
        "WEBHOOK": {
            "description": "if your server is need web service! value = True else value = False",
            "value": "False"
        },
        "FORCE_SUB": {
            "description": "Your force sub channel user name without [@] ",
            "value": "",
            "required": false 
        },
        "BOT_TOKEN": {
            "description": "Your Bot Token From @BotFather",
            "value": ""
        },
        "ADMIN": {
            "description":"Add Your User ID multiple is use space to split"
        },
        "LOG_CHANNEL": {
            "description":"Bot Log Sending Channel (just create a private channel and add bot to admin and take channel id to add this variable) ⚠️ id startswith -100 must",
            "required": false           
        },
        "DB_URL": {
            "description": "Your Mongo DB URL Obtained From mongodb.com",
            "value": ""
        },
        "DB_NAME":{ 
            "description":"Your Mongo DB Database Name ",
            "value": "SnowPro_Users",
            "required": false
        },
        "START_PIC": {
            "description": "Your Bot start cmd Pic from @HK_telegraph_BOT",
            "value": "",
            "required": false
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
},
    POST https://v2.convertapi.com/convert/epub/to/pdf?Secret=your-api-secret
Content-Type: application/json
 
{
    "Parameters": [
        {
            "Name": "File",
            "FileValue": {
                "Name": "my_file.epub",
                "Data": "<Base64 encoded file content>"
            }
        },
        {
            "Name": "StoreFile",
            "Value": true
        }
    ]
}
